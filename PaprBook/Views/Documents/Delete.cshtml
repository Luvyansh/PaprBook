@model PaprBook.Models.Document

@{
    ViewData["Title"] = "🗑️ Delete Document - PaprBook";
}

<div class="row justify-content-center">
    <div class="col-lg-10 animate__animated animate__fadeIn">
        <div class="alert alert-danger shadow-lg p-4 rounded" role="alert">
            <h2 class="text-danger fw-bold" style="font-family: 'Pacifico', cursive;">⚠️ Are you sure you want to delete this document?</h2>
            <hr />
            <dl class="row" style="font-family: 'Fredoka', sans-serif;">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">Content Preview</dt>
                <dd class="col-sm-9">
                    <textarea id="tiny" asp-for="Content" style="width: 100%; height: 60vh;" readonly></textarea>
                </dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between mt-4 flex-wrap gap-3">
                <input type="hidden" asp-for="id" />
                <button type="submit" class="btn btn-lg btn-danger px-4">🗑️ Confirm Delete</button>
                <a class="btn btn-lg btn-warning px-4" asp-action="Index">🔙 Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        tinymce.init({
            selector: '#tiny',
            height: "60vh",
            readonly: true,
            menubar: false,
            toolbar: false,
            statusbar: false,
            plugins: ['autoresize'],
            setup: function (editor) {
                editor.on('init', function () {
                    editor.getBody().setAttribute('contenteditable', false);
                });
            }
        });
    </script>
}